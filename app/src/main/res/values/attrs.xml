<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ButtonRoundView">
        <attr name="drawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="ToolbarBasicView">
        <attr name="toolbarLeftButton" format="string" />
        <attr name="toolbarTitle" format="string" />
        <attr name="toolbarRightButton" format="string" />
    </declare-styleable>


    <declare-styleable name="EditTextBasicView">
        <attr name="editTextHint" format="string" />
        <attr name="editTextTitle" format="string" />
        <attr name="editTextLines" format="integer" />
        <attr name="editTextLimit" format="integer" />
    </declare-styleable>

    <declare-styleable name="SpinnerBasicView">
        <attr name="spinnerHint" format="string" />
        <attr name="spinnerTitle" format="string" />
    </declare-styleable>

    <declare-styleable name="MultiChoiceBasicView">
        <attr name="multiChoiceTitle" format="string" />
        <attr name="multiChoiceHint" format="string" />
    </declare-styleable>

    <declare-styleable name="DateBasicView">
        <attr name="dateTitle" format="string" />
        <attr name="dateHint" format="string" />
        <attr name="dateIsBefore" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ButtonBasicView">
        <attr name="backgroundColor" format="color" />

        <attr name="text" format="string" />
        <attr name="textColor" format="color" />

        <attr name="icon" format="reference" />
        <attr name="iconColor" format="color" />
    </declare-styleable>

</resources>