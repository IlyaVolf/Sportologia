<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sportologia" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_medium</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2E2E2E</item>
        <item name="colorSecondaryVariant">#262629</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Custom. -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="TextStyleBold">
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/background_transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/purple_medium</item>
    </style>

    <style name="TextStyleRegular">
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleTitle">
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleSecondary">
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextStyleHint">
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <style name="SplashActivityStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ButtonStyleBasic" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@drawable/background_basic</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyleRound" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:background">@drawable/background_button_round</item>
        <item name="android:backgroundTint">@color/purple_dark</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ButtonStyleFilter" parent="TextStyleRegular">
        <item name="android:backgroundTint">@color/grey_50</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogStyleBasic" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/dialog_custom_basic</item>
        <item name="colorAccent">@color/purple_medium</item>
    </style>

    <style name="ButtonToggle">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/button_style_text</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/purple_medium</item>
    </style>

</resources>