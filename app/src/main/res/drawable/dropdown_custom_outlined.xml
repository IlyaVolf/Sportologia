<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
            <corners android:radius="@dimen/button_short_corners" />
            <stroke android:width="1dp" android:color="@color/element_primary"/>
        </shape>
    </item>
    <item
        android:gravity="center_vertical|right"
        android:right="@dimen/margin_sides">
        <layer-list>
            <item
                android:width="10dp"
                android:height="10dp"
                android:bottom="10dp"
                android:top="6dp"
                android:gravity="center">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/element_primary_inverted" />
                    </shape>
                </rotate>
            </item>
            <item
                android:width="20dp"
                android:height="10dp"
                android:bottom="14dp"
                android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/background" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>