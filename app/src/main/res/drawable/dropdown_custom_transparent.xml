<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
        </shape>
    </item>
    <item
        android:height="1dp"
        android:gravity="bottom">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/element_secondary" />
        </shape>
    </item>
    <item
        android:gravity="center_vertical|right"
        android:right="@dimen/margin_sides">
        <layer-list>
            <item
                android:width="8dp"
                android:height="8dp"
                android:bottom="8dp"
                android:gravity="center"
                android:top="4dp">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/element_secondary_inverted" />
                    </shape>
                </rotate>
            </item>
            <item
                android:width="16dp"
                android:height="10dp"
                android:bottom="14dp"
                android:left="2dp"
                android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/background" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>