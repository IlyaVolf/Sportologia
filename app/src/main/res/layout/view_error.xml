<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/margin_sides"
    android:layout_marginHorizontal="64dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ve_text"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_default_load_error_body"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/ve_try_again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.thesis.sportologia.ui.views.ButtonBasicView
        android:id="@+id/ve_try_again"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        app:text="@string/action_try_again"
        app:backgroundColor="@color/purple_medium"
        app:isIconOn="false"
        app:icon="@null"
        app:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ve_text" />

</androidx.constraintlayout.widget.ConstraintLayout>