<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/authorization_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_sides">

        <ImageView
            android:layout_width="278dp"
            android:layout_height="63dp"
            android:src="@drawable/logo_text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/email" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_custom_basic"
                android:hint="Введите адрес эл. почты"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="@dimen/margin_sides"
                android:paddingStart="20dp"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/password" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_custom_basic"
                android:hint="Введите пароль"
                android:inputType="textPassword"
                android:paddingHorizontal="@dimen/margin_sides"
                android:textSize="14sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="61dp" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ButtonStyleBasic"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/button_custom_gradient"
            android:text="@string/sign_up"
            android:textColor="@color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/ButtonStyleBasic"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/button_custom_gradient"
            android:backgroundTint="@color/white_20"
            android:stateListAnimator="@null"
            android:text="@string/back"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>