<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.thesis.sportologia.ui.PhotosFragment">

    <com.thesis.sportologia.ui.views.ToolbarBasicView
        android:id="@+id/photos_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_toolbarLeftButton="@string/action_back"
        app:tb_isToolbarUnderlined="false"
        app:tb_toolbarTitle="@string/photos"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>